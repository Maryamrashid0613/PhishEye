{
  "manifest_version": 3,
  "name": "PhishEye - Anti Phishing Shield",
  "version": "1.0",
  "description": "Detect and block phishing websites in real-time.",
  "permissions": ["activeTab", "scripting", "storage", "notifications"],
  "host_permissions": ["http://localhost:5000/*", "http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}
